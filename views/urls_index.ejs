
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
    name="viewport"
    content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    
    <!-- Bootstrap CSS -->
    <link
    rel="stylesheet"
    href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
    integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS"
    crossorigin="anonymous"
    />
    <title>TinyApp</title>
  </head>
  <body>
    <%- include('partials/_header') %>
    <main style="margin: 1em;">
        <h3>My URLs</h3>
        <table class="table">
          <thead>
            <tr>
              <th class="align-middle text-center" scope="col">Short URL ID</th>
              <th class="align-middle text-center" scope="col">Long URL</th>
              <th class="align-middle text-center" scope="col">Unique Visits</th>
              <th class="align-middle text-center" scope="col">Total Visits</th>
              <th class="align-middle text-center" scope="col">Analytics</th>
              <th class="align-middle text-center" scope="col">Edit</th>
              <th class="align-middle text-center" scope="col">Delete</th>
            </tr>
          </thead>
          <tbody>
            <% for (let url in urls) { %>
              <tr>
                <td class="align-middle text-center"><%= urls[url].id %></td>
                <td class="align-middle text-center"><%= urls[url].longURL %></td>
                <td class="align-middle text-center"><%= urls[url].uniqueVisits %></td>
                <td class="align-middle text-center"><%= urls[url].totalVisits %></td>
                <td class="align-middle text-center">
                    <a href="/analytics/<%= urls[url].id %>" type="submit" id="analytics" >
                      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-info-circle" viewBox="0 0 16 16">
                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                        <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"/>
                      </svg>
                    </a>
                </td>
                <td class="align-middle text-center">
                  <form action="/urls/<%= urls[url].id %>" method="GET">
                    <button type="submit" id="edit" class="btn btn-outline-primary">Edit</button>
                  </form>
                </td>
                <td class="align-middle text-center">
                  <form action="/urls/<%= urls[url].id %>?_method=DELETE" method="POST">
                    <input type="hidden" name="delete" value="<%= urls[url].id %>" />
                    <button type="submit" id="delete" class="btn btn-outline-danger">Delete</button>
                  </form>
                </td>
              </tr>
              <% } %>
            </tbody>
          </table>
    </main>
    <!-- Bootstrap JS -->
    <script
      src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
      integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
      integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
      integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
      crossorigin="anonymous"
    ></script>
  </body>
</html>